# Environment Variables Configuration for Evergreen Logistics API
# Copy this file to .env and fill in the actual values

# Server Configuration
# The port on which the server will run
PORT=4545

# Database Configuration
# Database username
DB_USER=your_db_username
# Database password
DB_PASSWORD=your_db_password
# Database server hostname or IP
DB_SERVER=localhost
# Database port
DB_PORT=1433
# Database name
DB_DATABASE=EvergreenDB

# Prisma Database URL
# Full connection string for the database (used by Prisma)
# Format: sqlserver://username:password@server:port;database=name;trustServerCertificate=true
DATABASE_URL="sqlserver://your_username:your_password@localhost:1433;database=EvergreenDB;trustServerCertificate=true"

# JWT Configuration
# Secret key for signing JWT tokens (must be strong and unique)
JWT_SECRET=your_strong_jwt_secret_key_here
# Alternative JWT secret key for compatibility
JWT_SECRET_KEY=your_strong_jwt_secret_key_here

# Cloudinary Configuration (for image uploads)
# Cloudinary cloud name
CLOUDINARY_CLOUD_NAME=your_cloud_name
# Cloudinary API key
CLOUDINARY_API_KEY=your_api_key
# Cloudinary API secret
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration (for SMTP)
# SMTP host (e.g., smtp.gmail.com)
EMAIL_HOST=smtp.gmail.com
# SMTP port (587 for TLS, 465 for SSL)
EMAIL_PORT=587
# Whether to use secure connection (true for SSL, false for TLS)
EMAIL_SECURE=false
# Email username (your email address)
EMAIL_USERNAME=your_email@gmail.com
# Email password or app password
EMAIL_PASSWORD=your_email_password
# Email sender address (optional, defaults to EMAIL_USERNAME)
EMAIL_SENDER=your_email@gmail.com